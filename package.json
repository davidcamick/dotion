{
  "name": "dotion",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"wait-on tcp:3000 && electron .\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:mac": "next build && electron-builder"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "electron-is-dev": "^3.0.1",
    "framer-motion": "^12.29.2",
    "googleapis": "^170.1.0",
    "luxon": "^3.7.2",
    "net": "^1.0.2",
    "next": "^14.2.0",
    "next-auth": "^4.24.13",
    "next-electron-server": "^1.0.0",
    "openai": "^4.28.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^8",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.dotion.app",
    "productName": "Dotion",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "public/**/*",
      "package.json",
      "next.config.js"
    ],
    "asar": true,
    "asarUnpack": [
      ".next/**/*"
    ]
  }
}
